generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ProofTransfer {
  id        String    @id // UUID from transaction initiator
  proof     Json?     // SolidityProof JSON (null until uploaded by authenticator)
  createdAt DateTime  @default(now())
  
  @@index([id])
}
